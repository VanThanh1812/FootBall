<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_conversation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.codedao.footballapp.conversation.ui.ConversationActivity"
    tools:showIn="@layout/activity_conversation">
    <RelativeLayout
        android:id="@+id/comment_containers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>
    <View
        android:layout_above="@+id/fg_edittext"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:background="@color/cardview_shadow_start_color"
        android:layout_height="0.25dp"/>

    <fragment
        android:id="@+id/fg_edittext"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/comment_containers"
        class="com.codedao.footballapp.conversation.fragment.TextInputFragment"
        tools:layout="@layout/fragment_textinput"/>
</RelativeLayout>
