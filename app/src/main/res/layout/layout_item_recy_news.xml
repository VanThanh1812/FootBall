<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="3dp"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="top"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/n_images"
                android:src="@mipmap/ic_launcher"
                android:layout_width="0dp"
                android:scaleType="centerCrop"
                android:layout_weight="2"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:padding="5dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/n_title"
                    android:text="ManCity thua MU cay dang tren saadadadadadadadadadadddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddn nha "
                    android:textSize="16dp"
                    android:padding="1dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/n_timestamp"
                    android:text="timestamp"
                    android:textSize="12dp"
                    android:padding="3dp"
                    android:gravity="end|bottom"
                    android:layout_gravity="right"
                    android:textColor="@color/colorTexDescy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/n_desc"
                    android:text=""
                    android:textSize="14dp"
                    android:padding="1dp"
                    android:textColor="@color/colorTexDescy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>